{{#if resume.references.length}}
    <article class="grid margin-section">
        {{#each resume.references}}
            <section class="grid__col-12 grid__col-xs-4">
                <div class="grid__cell{{#if @first}} border-top border-heavy{{/if}} padding-inline-top">
                    <h4 class="color-red">
                        {{#if @first}}
                            References
                        {{else}}
                            &nbsp;&nbsp;
                        {{/if}}
                    </h4>
                </div>
            </section>
            <section class="grid__col-12 grid__col-xs-8">
                <div class="grid__cell border-top{{#if @first}} border-heavy{{/if}} padding-inline-top">
                    <div class="grid">
                        <div class="grid__col-12 padding-none">
                            {{#if name}}
                                <h4 class="position">{{name}}</h4>
                            {{/if}}
                        </div>
                    </div>
                    <div class="grid">
                        <div class="grid__col-12 padding-none">
                            {{#if reference}}
                                <p class="margin-inline-top margin-inline-bottom-xs justify ref-quote">{{reference}}</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>
        {{/each}}
    </article>
{{/if}}
